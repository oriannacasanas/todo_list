<div class="body">

<img class="sloth" src="http://www.biaoqing.com/upload/2016/4/17/139758.GIF" alt="">
<!-- <img class="sloth" src="https://chirosushi.com/wp-content/uploads/2016/02/Sloth-Lazy.jpg" alt=""> -->
<div class="task-dashboard">
  <p id="notice"><%= notice %></p>

  <h1 id="title">Todo Items</h1>

  <table id="table" class="table-striped">
    <thead>
      <tr>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @todo_items.each do |todo_item| %>
        <tr>
          <td><%= todo_item.description %></td>
          <td><%= link_to 'Show', todo_item %></td>
          <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
          <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Todo Item', new_todo_item_path %>
</div>



</div>
